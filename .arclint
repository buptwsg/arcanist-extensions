{
    "linters": {
        "json": {
            "type": "json",
            "include": [
                "(^\\.arcconfig$)",
                "(^\\.arclint$)",
                "(configs/javascript/eslint.*)"
            ]
        },
        "generated": {
            "type": "generated"
        },
        "chmod": {
            "type": "chmod"
        },
        "merge-conflict": {
            "type": "merge-conflict"
        },
        "spelling": {
            "type": "spelling"
        },
        "text": {
            "type": "text",
            "text.max-line-length": 120
        },
        "php": {
            "type": "phutil-library",
            "include": "(\\.php$)"
        },
        "xhpast": {
            "type": "xhpast",
            "include": "(\\.php$)",
            "severity": {
                "16": "advice",
                "34": "error"
            },
            "xhpast.blacklisted.function": {
                "eval": "The eval() function should be avoided."
            },
            "xhpast.php-version": "5.3.0",
            "xhpast.php-version.windows": "5.3.0"
        }
    }
}
